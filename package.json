{
  "name": "convert-to-jcamp",
  "version": "5.1.0",
  "description": "Convert strings into JCAMP",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./lib-esm/index.js",
  "license": "MIT",
  "files": [
    "src",
    "lib",
    "types",
    "lib-esm"
  ],
  "scripts": {
    "build": "npm run tsc-esm && npx cheminfo-build --entry lib-esm/index.js --root ConvertToJcamp",
    "clean": "rimraf lib lib-esm",
    "check-types": "tsc --noEmit",
    "eslint": "eslint src --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepack": "npm run tsc",
    "prettier": "prettier --check src",
    "prettier-write": "prettier --write src",
    "test": "npm run test-coverage && npm run eslint && npm run prettier && npm run check-types",
    "test-coverage": "npm run test-only -- --coverage",
    "test-only": "jest",
    "tsc": "npm run clean && npm run tsc-cjs && npm run tsc-esm",
    "tsc-cjs": "tsc --project tsconfig.cjs.json",
    "tsc-esm": "tsc --project tsconfig.esm.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/convert-to-jcamp.git"
  },
  "bugs": {
    "url": "https://github.com/cheminfo/convert-to-jcamp/issues"
  },
  "homepage": "https://github.com/cheminfo/convert-to-jcamp#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "eslint": "^8.3.0",
    "eslint-config-cheminfo-typescript": "^10.2.4",
    "esm": "^3.2.25",
    "jcampconverter": "^8.2.2",
    "jest": "^27.3.1",
    "jest-matcher-deep-close-to": "^3.0.2",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "cheminfo-types": "^0.8.0",
    "ml-array-max": "^1.2.3",
    "ml-array-min": "^1.2.2",
    "ml-spectra-processing": "^6.8.0"
  }
}
